block styles
	link(href="../f/css/personal-data.css", rel="stylesheet", type="text/css")

block topbarDefault

block topNav
	nav.topnav.tablet-hide
		input#topnav-toggle.desktop-hide(type="checkbox")
		label.topnav-button-container.desktop-hide(for="topnav-toggle")
			.topnav-button
		ul.topnav-list
			block loginPhone
				li.topnav-login.phone-show
					+btn("Вход").with-border
					+btn("Регистрация").with-border
			li.topnav-phone.phone-show 8 (800) 302-32-09

block content

	.b-section-wrap.b-pers-promo-wrap
